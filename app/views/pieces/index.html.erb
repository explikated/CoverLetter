<div id="create_new">
	<%= link_to "Add your RocksBox story", new_piece_path %>
</div>
<div id="gallery">
	<% @pieces.sort.each do |piece| %>
		<% if piece.photo_path.nil? %>
			<%= link_to image_tag(piece.photo.url(:medium)), piece, class: "gallery_item" %>
		<% else %>
			<%= link_to image_tag(piece.photo_path ), piece, class: "gallery_item" %>
		<% end %>
	<% end %>
</div>